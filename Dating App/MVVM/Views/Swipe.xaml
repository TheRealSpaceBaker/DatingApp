<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dating_App.MVVM.Views.Swipe">

    <VerticalStackLayout Spacing="20" Padding="20">
        <!-- Profile Display -->
        <Frame Padding="10" BackgroundColor="LightGray" CornerRadius="10" IsVisible="{Binding HasUsers}">
            <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                <Image Source="default_profile.jpg" WidthRequest="200" HeightRequest="200" Aspect="AspectFill" />
                <Label Text="{Binding CurrentUser.Name}" FontSize="24" HorizontalOptions="Center" />
                <Label Text="{Binding CurrentUser.Email}" FontSize="14" HorizontalOptions="Center" />
            </VerticalStackLayout>
        </Frame>

        <VerticalStackLayout IsVisible="{Binding HasNoUsers}" HorizontalOptions="Center" VerticalOptions="Center">
            <Label Text="No more users to swipe through!" FontSize="20" TextColor="Gray" HorizontalOptions="Center" />
        </VerticalStackLayout>

        <HorizontalStackLayout HorizontalOptions="Center" Spacing="30" IsVisible="{Binding HasUsers}">
            <Button Text="Dislike" BackgroundColor="Red" TextColor="White" Command="{Binding DislikeCommand}" />
            <Button Text="Like" BackgroundColor="Green" TextColor="White" Command="{Binding LikeCommand}" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>
